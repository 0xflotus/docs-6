{
  "name": "logux",
  "private": true,
  "scripts": {
    "links": "find . -maxdepth 2 -name \\*.md | xargs -n 1 markdown-link-check",
    "spell": "yaspeller *.md */*.md",
    "test": "yarn spell && yarn links"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.5.3",
    "markdown-link-check": "^3.7.3",
    "yaspeller": "^5.1.0"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      "\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Logux",
      "webapp",
      "GraphQL",
      "WebSocket",
      "UI",
      "UX",
      "Redux",
      "JS",
      "js",
      "CRDT",
      "unsubscribe",
      "unsent",
      "A’s",
      "B’s",
      "Gitter",
      "io",
      "logux",
      "Preact",
      "redux",
      "Redux’s",
      "favicon",
      "subprotocol",
      "subprotocols",
      "npm",
      "WebSockets",
      "UUID",
      "SemVer",
      "JWT",
      "subscribe’s"
    ]
  }
}
