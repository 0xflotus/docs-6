{
  "name": "logux",
  "private": true,
  "scripts": {
    "test": "yaspeller *.md */*.md"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "yaspeller": "^5.0.1"
  },
  "lint-staged": {
    "*.md": "yaspeller"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "Logux",
      "webapp",
      "GraphQL",
      "WebSocket",
      "UI",
      "UX",
      "Redux",
      "JS",
      "js",
      "CRDT",
      "unsubscribe",
      "unsent",
      "A’s",
      "B’s"
    ]
  }
}
