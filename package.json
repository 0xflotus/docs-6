{
  "name": "logux",
  "private": true,
  "scripts": {
    "links": "find . -maxdepth 2 -name \\*.md -exec npx markdown-link-check {} \\;",
    "spell": "yaspeller *.md */*.md",
    "test": "yarn spell && yarn links"
  },
  "devDependencies": {
    "husky": "^2.4.0",
    "lint-staged": "^8.1.7",
    "markdown-link-check": "^3.7.3",
    "yaspeller": "^5.1.0"
  },
  "lint-staged": {
    "*.md": [
      "yaspeller",
      "markdown-link-check"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "Logux",
      "webapp",
      "GraphQL",
      "WebSocket",
      "UI",
      "UX",
      "Redux",
      "JS",
      "js",
      "CRDT",
      "unsubscribe",
      "unsent",
      "A’s",
      "B’s",
      "Gitter",
      "io",
      "logux",
      "Preact",
      "redux",
      "Redux’s",
      "favicon",
      "subprotocols"
    ]
  }
}
